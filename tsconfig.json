{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "**/__tests__/**", "**/__mocks__/**"]
}
